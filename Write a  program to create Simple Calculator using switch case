#include<stdio.h>
int main()
{
    float a,b;
    printf("Enter two values:");
    scanf("%f%f",&a,&b);
    
     char ch;
     printf("Enter an operator:");
     scanf("%c",&ch);
     switch(ch)
     {
        case'+':
        printf("%.2f + %.2f = %.2f",a,b,a+b);
        break;
        
        case'-':
        printf("%.2f - %.2f = %.2f",a,b,a-b);
        break;
        
        case'*':
        printf("%.2f * %.2f = %.2f",a,b,a*b);
        break;
         
        case'/':
        printf("%.2f/%.2f = %.2f",a,b,a/b);
        break;
     }
     return 0;
    
    
}
